<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:layout="@layout/header_settings"
        app:title="@string/notifications_header">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:icon="@drawable/ic_notifications"
            app:key="pushNotifications"
            app:summaryOff="@string/push_notifications_off"
            app:summaryOn="@string/push_notifications_on"
            app:title="@string/push_notifications_title" />
    </PreferenceCategory>

    <PreferenceCategory
        app:layout="@layout/header_settings"
        app:title="@string/about_header">
        <Preference
            app:icon="@drawable/ic_terms_and_conditions"
            app:key="termsAndConditions"
            app:summary="@string/terms_and_conditions_summary"
            app:title="@string/terms_and_conditions_header" />

        <Preference
            app:icon="@drawable/ic_privacy_policy"
            app:key="privacyPolicy"
            app:summary="@string/privacy_policy_summary"
            app:title="@string/privacy_policy_header" />

        <Preference
            app:icon="@drawable/ic_credits"
            app:key="credits"
            app:summary="@string/credits_summary"
            app:title="@string/credits_header" />

        <Preference
            app:icon="@drawable/ic_contact_us"
            app:key="contactUs"
            app:summary="@string/contact_us_summary"
            app:title="@string/contact_us_title" />

        <Preference
            app:icon="@drawable/ic_developers"
            app:summary="@string/developers_summary"
            app:title="@string/developers_title" />

        <Preference
            app:icon="@drawable/ic_version"
            app:summary="@string/version_summary"
            app:title="@string/version_title" />
    </PreferenceCategory>
</PreferenceScreen>