        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CommentsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ImageFullscreenActivity"
            android:exported="false" />
